<%= form_with url: "/companies/#{@company.id}", method: :patch, local: true do |form| %>
	<%= form.label :name %>
	<%= form.text_field :name %>
	<%= form.label :location %>
	<%= form.text_field :location %>
	<%= form.label :total_stock %>
	<%= form.number_field :total_stock %>
	<%= form.label :pro_deal %>
	<%= form.select :pro_deal, options_for_select([false, true]), class: 'form-control' %>
	<%= form.submit "Update Company" %>
<% end %>