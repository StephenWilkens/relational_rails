<%= link_to "Bikes", "/bikes" %>
<%= link_to "Companies", "/companies" %>
<%= link_to "Create Bike", "/companies/#{@company.id}/bikes/new" %>

<h1><%= @company.name %></h1>
  <% @bikes.sort_by_name_alphabetically.each do |bike| %>
  <h3><%= bike.name %></h3>
  <p><%= bike.front_travel %></p>
  <p><%= bike.full_suspension %></p>
  <% end %>
